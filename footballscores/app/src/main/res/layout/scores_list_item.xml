<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item"
    android:elevation="4dp"
    android:minHeight="100dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/home_crest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/arsenal"/>

    <TextView
        android:id="@+id/home_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/data_textview"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:singleLine="false"
        android:maxLength="30"
        android:gravity="center"
        android:text="@string/test_text"
        android:textSize="@dimen/TeamNames"/>

    <TextView
        android:id="@+id/score_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="1 - 1"
        android:textSize="@dimen/Score"/>

    <TextView
        android:id="@+id/data_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/score_textview"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/test_text"/>

    <ImageView
        android:id="@+id/away_crest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:src="@drawable/aston_villa"/>

    <TextView
        android:id="@+id/away_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/away_crest"
        android:layout_below="@+id/data_textview"
        android:layout_gravity="center"
        android:layout_marginRight="8dp"
        android:singleLine="false"
        android:gravity="center"
        android:text="@string/test_text"
        android:textSize="@dimen/TeamNames"/>

    <TextView
        android:id="@+id/league_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/test_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/home_name"
        android:textColor="@android:color/black"
        android:textSize="@dimen/League"/>

    <TextView
        android:id="@+id/matchday_textview"
        android:layout_below="@id/away_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="@string/test_text"
        android:textColor="@android:color/black"
        android:textSize="@dimen/League"/>

    <Button
        android:id="@+id/share_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/matchday_textview"
        android:layout_gravity="center"
        android:drawableLeft="@android:drawable/ic_menu_share"
        android:gravity="center"
        android:paddingLeft="120dp"
        android:paddingRight="120dp"
        android:text="@string/share_text"/>


</RelativeLayout>


